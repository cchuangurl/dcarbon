    methods:{
        rerender:function() {
      this.inputerUIkey += 1;
      console.log("inputerUIkey:"+this.inputerUIkey)
        },
        handleFileSelect:function(fieldName, fileList){
          // Check if there is a file
          if(!fileList.length) return;
            // Get the first file
            const originfile = fileList[0];
            console.log("type of originfile:"+typeof(originfile))
            // Set the file name
            this.filepath=URL.createObjectURL(originfile);
            this.file2upload = originfile.name;
            let dotlocat=this.file2upload.indexOf(".");
            this.alias=this.file2upload.substring(dotlocat+1)
            console.log("alias:"+this.alias)
            /*
            var reader = new FileReader();
            reader.onload = function(e) {
                $("#preview_img").attr("src", e.target.result);
            }
            reader.readAsBinaryString(file2upload);
            */
            var formData=new FormData();
            formData.append('thefile', originfile);
            formData.append('caseID', this.caseID);
            formData.append('dataneedID', this.dataneedID);
            formData.append('statusreport', this.statusreport);
            formData.append('status', this.status);
            formData.append('file2upload', this.file2upload);
            formData.append('filepath', this.filepath);
            formData.append('alias', this.alias);
            formData.forEach((val,key)=>{
              console.log(key+":"+val)
            })
            axios.post('/base4dcarbon/evidence/uploadfile/'+this.personID,formData,{
            Headers:{
              "Content-type":"multipart/form-data"
            }
            })
            // The public URL can be used to directly access the file via HTTP.
            this.fileUrl= `https://storage.googleapis.com/`+this.bucketName+"/"+this.dataneedID+"."+this.alias;
            // Finish uploading
              this.isUploading = false;
              this.isUploaded = true;
        },
        backprepare:function(){
          let querytext="?statusreport=由上傳1筆佐證資料回到本頁&status=3&caseID="+this.caseID;
          let url3='/base4dcarbon/case/preparedata/'+this.personID+querytext;
          window.location=url3
           }
