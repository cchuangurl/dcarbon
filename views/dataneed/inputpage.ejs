    <template id="inputerUI" ">
      <div class="card" style="width: 36rem;" >
        <div class="card-body">
          <h5 class="card-title">{{card_title}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{card_subtitle}}</h6>
          <form :action="addoneurl" method="post">
            <div class="form-group" :key="inputerUIkey">

              <label for="formGroupExampleInput2">{{items.item0}}</label>
              <select :name="names.name0" class="form-select">
                <optgroup v-for="subact of subactlist" :key="subact._id">
                <option :value="subact._id">{{subact.a20describe}}</option>
                </optgroup>
                </select>
              <br>

              <label for="formGroupExampleInput2">{{items.item1}}</label>
              <select :name="names.name1" class="form-select">
                <optgroup v-for="term of termlist" :key="term._id">
                <option :value="term.a25code">{{term.a30mean}}</option>
                </optgroup>
                </select>
              <br>
              <label for="formGroupExampleInput2">{{items.item2}}</label>
              <input type="text" :name="names.name2" class="form-control" id="formGroupExampleInput2" :placeholder="holders.holder2">

              <label for="formGroupExampleInput2">{{items.item3}}</label>
              <input type="text" :name="names.name3" class="form-control" id="formGroupExampleInput3" :placeholder="holders.holder3">

              <label for="formGroupExampleInput2">{{items.item4}}</label>
              <input type="text" :name="names.name4" class="form-control" id="formGroupExampleInput4" :placeholder="holders.holder4">

              <label for="formGroupExampleInput">{{items.item99}}</label>
              <input type="text" name="a99footnote" class="form-control" id="formGroupExampleInput99" :placeholder="holders.holder99">
              <input type="hidden" name="caseID" :value="caseID">
              <input type="hidden" name="statusreport" class="form-control" id="msg1" value="由單筆dataneed輸入後進入本頁">
              <input type="hidden" name="status" class="form-control" id="msg2" :value="status">
              <input type="submit" id="button1" value="確定送出" class="btn btn-info">
            </div>
          </form>
          <input type="submit" id="button2" value="重新輸入" class="btn btn-info" @click="rerender()">
            <!-- <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a> -->
        </div>
      </div>
    </template>

<!-- Vue CDN-->
<script src="https://unpkg.com/vue@2.6.14/dist/vue.js"></script>
<script>
Vue.component("bander",{

    data(){
      return {
        brand:"dCarbon",
        lastpage:"回前頁",
        input1:"手動新增1筆",
        inputbatch:"批次輸入",
        crawl:"從網路抓取",
        lastpageurl:"",
        status:'<%- status%>',
        statusreport:'<%- statusreport %>'
        }
      },
      mounted:function(){
        let basepath="/base4dcarbon/dataneed";
        let querytext="?statusreport=由單筆輸入佐證資料項目頁回到本頁&status="+this.status+"&caseID="+this.caseID;
        switch(this.status){
          case "0":this.lastpageurl=basepath+"/listpage/"+this.personID+querytext;break;
          case "5":this.lastpageurl=basepath+"/baselineitem/"+this.personID+querytext;break;
          case "6":this.lastpageurl=basepath+"/newactitem/"+this.personID+querytext;break;
          case "7":this.lastpageurl=basepath+"/postitem/"+this.personID+querytext;break;
          default:this.lastpageurl=basepath+"/listpage/"+this.personID+querytext;break
        }

      },
    template:"#banderUI"
  });
