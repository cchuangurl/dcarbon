        emissorID:'<%- emissorID %>',
        personID:'<%- personID %>',
        termlist:JSON.parse(decodeURIComponent('<%=termlist%>')),
        addoneurl:"",
        items:{
          item0:"細部活動代碼",
          item1:"資料需求階段",
          item2:"資料提供期限",
          item3:"所需資料名稱",
          item4:"所需資料描述",
          item99:"特別註記"
          },
        names:{
          name0:"a05subactID",
          name1:"a10datatype",
          name2:"a15timing",
          name3:"a20dataname",
