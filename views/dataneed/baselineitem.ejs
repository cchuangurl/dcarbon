  Vue.component("outputer2",{
      props:{},
      data(){
        return{
          perPage:8,
          perRound:10,
          maxRow:1,
          maxPage:1,
          maxRound:1,
          modRow:1,
          modPage:1,
          currentIndex:0,
          currentPage:1,
          currentRound:1,
          indexLength:1,
          previousRound:false,
          firstPage:false,
          nextRound:false,
          endPage:false,
          fullPage:false,
          pageIndex:[],
          showIndex:[],
          activeIndex:[],
          dataneedShow:[],
          statusreport:'<%- statusreport %>',
          caseID:'<%- caseID %>',
          personID:'<%- personID %>',
          inputpageurl:"",
          inputbatchurl:"",
          termlist:JSON.parse(decodeURIComponent('<%=termlist%>')),
          subactlist:JSON.parse(decodeURIComponent('<%=subactlist%>')),
          dataneedlist:JSON.parse(decodeURIComponent('<%=dataneedlist%>')),
          items:{
            item0:"細部活動代碼",
            item1:"資料需求階段",
            item2:"資料提供期限",
            item3:"所需資料名稱",
            item4:"所需資料描述",
            item99:"特別註記"
            }
        }
      },
      mounted:function(){
        this.inputpageurl="/base4dcarbon/dataneed/inputpage/"+this.personID;
        this.inputbatchurl="/base4dcarbon/dataneed/inputbatch/"+this.personID;
        for(dataneed of this.dataneedlist){
              let temp1=this.subactlist.find(obj=>obj._id==dataneed.a05subactID);
              console.log("temp:"+temp1);
              let temp2=this.termlist.find(obj=>obj.a25code==temp1.a15nickname);
              dataneed.a05subactID=temp2.a30mean;
              //dataneed.a15timing=dataneed.a15timing.toJSON().substr(0,9)
              }
        this.dataneedlist.sort((a,b)=>{
            return parseFloat(a.a05subactID)-parseFloat(b.a05subactID)
        })

        this.maxRow=this.dataneedlist.length;
        this.modRow=this.maxRow%this.perPage;
        this.maxPage=this.modRow==0?this.maxRow/this.perPage:Math.floor(this.maxRow/this.perPage)+1;
        this.modPage=this.maxPage%this.perRound;
        this.maxRound=this.modPage==0?this.maxPage/this.perRound:Math.floor(this.maxPage/this.perRound)+1;
        this.goFirstPage()

      },
      methods:{
        editone:function(id){
          let querytext="?statusreport='由dataneed資料清單頁的編輯按鈕進入本頁'";
          let url2='/base4dcarbon/dataneed/editpage/'+id+querytext;
          window.location=url2;
        },
        deleteone:function(id){
          let querytext="?statusreport='由dataneed資料清單頁的刪除按鈕進入本頁'";
          let url3='/base4dcarbon/dataneed/delete/'+id+querytext;
          window.location=url3
           },

        getShowData:function(index){
          this.currentIndex=index;
          this.activeIndex.splice(0);
          this.pageIndex.splice(0);
          this.showIndex.splice(0);
          for(let i=0;i<this.indexLength;i++){
              this.pageIndex.push(((this.currentRound-1)*this.perRound)+i+1);
              this.showIndex.push(true);
              this.activeIndex.push(false)
          }
          this.activeIndex[index]=true;
          for(let i=this.indexlength;i<this.perRound;i++){
              this.showIndex.push(false)
          };
          this.currentPage=this.pageIndex[index]
          console.log("currentPage is:"+this.currentPage)
          this.fullPage=(this.maxRow>=(this.currentPage*this.perPage))?true:false;
          this.dataneedShow.splice(0);
          let startRow=(this.currentPage-1)*this.perPage;
            console.log("startRow is:"+startRow)
          let rowNo=this.fullPage?this.perPage:this.modRow;
          console.log("rowNo is:"+rowNo);
          //this.dataneedShow=[];
          this.dataneedShow=this.dataneedlist.slice(startRow,startRow+rowNo)
          //this.dataneedShow=this.dataneedlist.slice(8,3)
          console.log("11st dataneedlist:"+this.dataneedlist[10])
          console.log("1st dataneedShow:"+this.dataneedShow[0])

        },
        goFirstPage:function(){
          this.currentRound=1;
          this.indexLength=(this.maxPage>this.perRound)?this.perRound:this.modPage;
          this.previousRound=false;
          this.firstPage=false;
          this.nextRound=(this.maxPage<(this.perRound+1))?false:true;
          this.endPage=(this.maxPage<(this.perRound+1))?false:true;
          this.currentIndex=0;
          this.getShowData(this.currentIndex)
        },
        goEndPage:function(){
          this.currentRound=this.maxRound;
          this.indexLength=(this.modPage==0)?this.perRound:this.modPage;
          this.previousRound=true;
          this.firstPage=true;
          this.nextRound=false;
          this.endPage=false;
          this.currentIndex=this.indexLength-1;
          this.getShowData(this.currentIndex)
        },
        goPreviousRound:function(){
          if(this.currentRound>1){
          this.currentRound--;
          this.currentIndex=0;
          this.indexLength=this.perRound;
          this.previousRound=this.currentRound>1?true:false;
          this.firstPage=this.currentRound>1?true:false;
          this.nextRound=true;
          this.endPage=true;
          this.getShowData(this.currentIndex)
          }else{
              console.log("There is no previous round!!")
              this.goFirstpage()
          }
        },
        goNextRound:function(){
          if(this.currentRound<this.maxRound){
          this.currentRound++;
          this.currentIndex=0;
          this.indexLength=(this.maxPage>this.currentRound*this.perRound)?this.perRound:this.modPage;
          this.previousRound=true;
          this.firstPage=true;
          this.nextRound=(this.maxPage>this.currentRound*this.perRound)?true:false;
          this.endPage=(this.maxPage>this.currentRound*this.perRound)?true:false;
          this.getShowData(this.currentIndex)
          }else{
            console.log("There is no next round!!")
            this.goEndPage()
          }
        }
      },
    template:"#outputer2UI"
    });
